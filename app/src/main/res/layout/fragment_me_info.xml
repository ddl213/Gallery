<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <LinearLayout
        android:id="@+id/linearlayout_img_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_photo_info"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:contentDescription="头像"
            app:srcCompat="@drawable/girl" />

        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/radius_border"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_img_info">

        <TextView
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:gravity="center_vertical"
            android:text="昵称"
            android:textColor="@color/DC_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_info"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="名字"
            app:drawableEndCompat="@drawable/ic_right_24"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_name"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_name_info" />


        <TextView
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/DC_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_name" />

        <TextView
            android:id="@+id/tv_phone_info"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="手机号码"
            app:drawableEndCompat="@drawable/ic_right_24"
            app:layout_constraintTop_toBottomOf="@id/line_name" />

        <View
            android:id="@+id/line_phone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_info" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:gravity="center_vertical"
            android:text="性别"
            android:textColor="@color/DC_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_phone" />


        <TextView
            android:id="@+id/tv_sex_info"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="性别"
            app:drawableEndCompat="@drawable/ic_right_24"
            app:layout_constraintTop_toBottomOf="@id/line_phone" />

        <View
            android:id="@+id/lin_sex"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_sex_info" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:gravity="center_vertical"
            android:text="生日"
            android:textColor="@color/DC_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lin_sex" />


        <TextView
            android:id="@+id/tv_birthday_info"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="生日"
            app:layout_constraintTop_toBottomOf="@id/lin_sex" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>